{
  "name": "Vertex AI Codespace",
  "image": "mcr.microsoft.com/devcontainers/python:3.10",

  "features": {
    "ghcr.io/devcontainers/features/google-cloud-cli:1": {}
  },

  "postCreateCommand": "pip install --no-cache-dir -r requirements.txt",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.wordWrap": "on"
      }
    }
  },

  "onCreateCommand": "pip install google-cloud-aiplatform",

  "postCreateCommand": "echo 'Run gcloud auth application-default login in the terminal to authenticate with your Google Cloud account.'"
}